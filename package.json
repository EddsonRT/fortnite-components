{
    "name": "fortnite-components",
    "version": "1.0.0",
    "private": true,
    "author": "EddsonRT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EddsonRT/fortnite-components.git"
    },
    "keywords": [
        "Fortnite",
        "Component"
    ],
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "scripts": {
        "dev": "yarn workspace app run dev",
        "example:basic": "yarn workspace basic run start",
        "storybook": "yarn workspace app run storybook",
        "build": "yarn workspace app run build",
        "library": "yarn workspace fortnite-components run storybook",
        "library:storybook": "yarn workspace fortnite-components run build-storybook",
        "library:build": "yarn workspace fortnite-components run build",
        "library:publish": "yarn workspace fortnite-components run publish",
        "type-check": "yarn workspaces run type-check",
        "lint": "eslint . --ext ts --ext tsx --ext js --ext jsx",
        "test": "yarn workspace app run test",
        "chromatic": "yarn workspace fortnite-components run chromatic",
        "format": "prettier --write .",
        "clear:node_modules": "rimraf '**/node_modules'"
    },
    "engines": {
        "node": ">=14",
        "yarn": ">=1.22.10"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.@(js|jsx|ts|tsx)": [
            "yarn lint"
        ],
        "*.@(js|jsx|ts|tsx|json|css|scss|md|yaml|yml)": [
            "yarn format"
        ]
    },
    "peerDependencies": {
        "@emotion/react": "^11.1.5",
        "@emotion/styled": "^11.1.5",
        "@types/react": "^17.0.2",
        "react": "^17.0.1"
    },
    "dependencies": {
        "@emotion/react": "11.4.0",
        "@emotion/styled": "11.3.0",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-scripts": "4.0.3"
    },
    "devDependencies": {
        "@babel/core": "7.14.6",
        "@babel/preset-env": "7.14.5",
        "@babel/preset-react": "7.13.13",
        "@babel/preset-typescript": "7.13.0",
        "@commitlint/cli": "12.1.4",
        "@commitlint/config-conventional": "12.1.4",
        "@emotion/babel-preset-css-prop": "11.2.0",
        "@emotion/eslint-plugin": "11.2.0",
        "@next/eslint-plugin-next": "^11.1.2",
        "@types/node": "14.17.3",
        "@types/react": "17.0.11",
        "@types/react-dom": "17.0.7",
        "@typescript-eslint/eslint-plugin": "4.27.0",
        "@typescript-eslint/parser": "4.27.0",
        "autoprefixer": "10.2.6",
        "babel-eslint": "10.1.0",
        "babel-loader": "8.1.0",
        "babel-plugin-macros": "3.1.0",
        "babel-plugin-module-resolver": "4.1.0",
        "babel-plugin-twin": "1.0.2",
        "eslint": "7.28.0",
        "eslint-config-next": "^11.1.2",
        "eslint-config-prettier": "8.3.0",
        "eslint-config-standard": "16.0.3",
        "eslint-plugin-import": "2.23.4",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-prettier": "3.4.0",
        "eslint-plugin-promise": "5.1.0",
        "eslint-plugin-react": "7.24.0",
        "eslint-plugin-standard": "5.0.0",
        "husky": "6.0.0",
        "lint-staged": "11.0.0",
        "postcss": "8.3.4",
        "prettier": "2.3.1",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-scripts": "4.0.3",
        "rimraf": "3.0.2",
        "tailwindcss": "2.1.4",
        "twin.macro": "2.5.0",
        "typescript": "4.3.3",
        "webpack": "4.44.2"
    },
    "bugs": {
        "url": "https://github.com/EddsonRT/fortnite-components/issues"
    },
    "homepage": "https://github.com/EddsonRT/fortnite-components#readme"
}
